<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

	<item android:id="@android:id/background">
		  <shape >
	          <corners android:radius="10dip" />
	          <gradient
	              android:angle="270"
	              android:centerColor="#e1f5eb"
	              android:centerY="0.45"
	              android:endColor="#e1f5eb"
	              android:startColor="#e1f5eb" />
	      </shape>

	</item>
	<item android:id="@android:id/progress">
		<clip >
	          <shape >
	              <corners android:radius="10dip" />
	              <gradient
	                  android:angle="270"
	                  android:centerColor="#31c37c"
	                  android:centerY="0.45"
	                  android:endColor="#31c37c"
	                  android:startColor="#31c37c" />
	          </shape>
	     </clip>
	 </item>
</layer-list>