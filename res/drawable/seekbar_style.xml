<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

	<item android:id="@android:id/background">
		  <shape >
	          <corners android:radius="10dip" />
	          <gradient
	              android:angle="270"
	              android:centerColor="@color/translucent_8"
	              android:centerY="0.45"
	              android:endColor="@color/translucent_8"
	              android:startColor="@color/translucent_8" />
	      </shape>

	</item>
	<item android:id="@android:id/progress">
		<clip >
	          <shape >
	              <corners android:radius="10dip" />
	              <gradient
	                  android:angle="270"
	                  android:centerColor="@color/deep_red2"
	                  android:centerY="0.45"
	                  android:endColor="@color/deep_red2"
	                  android:startColor="@color/deep_red2" />
	          </shape>
	     </clip>
	 </item>
</layer-list>