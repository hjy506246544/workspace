<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog"
    android:layout_marginBottom="40dp"
    tools:ignore="all">

    <TextView
        android:id="@+id/kttv"
        style="@style/app_textStyle1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/main_kt"
        android:drawablePadding="10dp"
        android:text="空调开关"
        android:minHeight="45dp" />

    <com.gvs.controlpanel.widget.SlideSwitch
        android:id="@+id/aircondition_slideswitch"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/kttv"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/aircondition_wdtjtv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="空调温度调节"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/aircondition_slideswitch"
        android:drawableLeft="@drawable/main_kt"
        android:drawablePadding="10dp"
       	android:minHeight="45dp"
        style="@style/app_textStyle1" />

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:layout_below="@+id/aircondition_wdtjtv" >

        <ImageButton
            android:id="@+id/minusib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/aircondition_minus_" />

        <TextView
            android:id="@+id/ktwdtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/aircondition_ktwd"
            style="@style/app_textStyle6"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/minusib"
            android:gravity="center"
            android:text="26℃" />

        <ImageButton
            android:id="@+id/jiaib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ktwdtv"
            android:layout_marginLeft="10dp"
            android:background="@drawable/aircondition_jia_" />

    </RelativeLayout>

</RelativeLayout>