        android:layout_height="wrap_content" >

	    <TextView
        	android:id="@+id/activity_securitymonitor_allyeartv"
            style="@style/text_flag_01"
            android:background="@drawable/flag_02"
            android:text="@string/securitymonitor_videoplay_allyear" />

        <TextView
        	android:id="@+id/activity_securitymonitor_liutv"
            style="@style/text_flag_01"
            android:background="@drawable/flag_02"
            android:text="@string/securitymonitor_videoplay_2016" />

        <TextView
        	android:id="@+id/activity_securitymonitor_wutv"
            style="@style/text_flag_01"
            android:background="@drawable/flag_02"
            android:text="@string/securitymonitor_videoplay_2015" />

        <TextView
        	android:id="@+id/activity_securitymonitor_sitv"
            style="@style/text_flag_01"
            android:background="@drawable/flag_02"
            android:text="@string/securitymonitor_videoplay_2014" />

        <TextView
        	android:id="@+id/activity_securitymonitor_santv"
            style="@style/text_flag_01"
            android:background="@drawable/flag_02"
            android:text="@string/securitymonitor_videoplay_2013" />

        <TextView
        	android:id="@+id/activity_securitymonitor_ertv"
            style="@style/text_flag_01"
