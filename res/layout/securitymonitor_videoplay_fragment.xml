            style="@style/text_flag_01"
            android:background="@drawable/flag_02"
            android:text="@string/securitymonitor_videoplay_10" />

        <TextView
        	android:id="@+id/activity_securitymonitor_novembertv"
            style="@style/text_flag_01"
            android:background="@drawable/flag_02"
