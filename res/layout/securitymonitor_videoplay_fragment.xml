	</com.gvs.controlpanel.widget.FlowLayout>

	<com.gvs.controlpanel.widget.FlowLayout
        android:id="@+id/activity_securitymonitor_flowLayout2"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/flowLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

	    <TextView
        	android:id="@+id/activity_securitymonitor_allmonthtv"
