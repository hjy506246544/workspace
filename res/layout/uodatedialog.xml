<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:omni="http://fala.cellcom.com.cn/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white2"
    android:layout_marginBottom="20dp"
    tools:ignore="all">

    <TextView
        android:id="@+id/gxtv"
        style="@style/app_textStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:text="升级提示"
        android:gravity="center_vertical"
        android:minHeight="45dp" />

    <TextView
        android:id="@+id/tstv"
        style="@style/app_textStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/gxtv"
        android:gravity="center_vertical"
        android:text="请更新到最新版本"
        android:minHeight="45dp" />

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
	    android:minHeight="45dp"
        android:layout_below="@+id/tstv" >

	    <Button
	        android:id="@+id/qxbtn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="取消"
	        android:layout_alignParentLeft="true"
	    	android:gravity="center_vertical"
	       	android:minHeight="45dp"
	       	android:layout_marginLeft="90dp"
	        style="@style/app_textStyle5"
	        android:background="@null" />

	    <Button
	        android:id="@+id/qdbtn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="确定"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="40dp"
	   	 	android:gravity="center_vertical"
	       	android:minHeight="45dp"
	        style="@style/app_textStyle5"
	        android:background="@null" />

    </RelativeLayout>

</RelativeLayout>