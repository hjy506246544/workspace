    <com.gvs.controlpanel.widget.Header
        android:id="@+id/light_activity_header"
        android:layout_width="match_parent"
        android:layout_height="80dp"
    	android:background="@color/translucent_4"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_below="@id/light_activity_header">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_light_bg"/>

        <com.gvs.edwin.activity.AppIcon
            android:id="@+id/gridview_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tranparent"
            android:cacheColorHint="#00000000"
            android:drawSelectorOnTop="false"
            android:listSelector="@color/tranparent"
            android:numColumns="6"
            android:stretchMode="columnWidth"
            android:paddingTop="60dp"
            android:verticalSpacing="60dp" >
        </com.gvs.edwin.activity.AppIcon>
    </LinearLayout>

</RelativeLayout>