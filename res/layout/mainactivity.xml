<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
 	android:background="@drawable/main_bj"
	android:id="@+id/main"
    tools:ignore="all" >

	<RelativeLayout
	    android:id="@+id/header"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@color/translucent_8"
	    android:gravity="center"
	    android:minHeight="80dp" >
	    <ImageView
            android:id="@+id/backiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
	    	android:minHeight="70dp"
        	android:gravity="center"
            android:src="@drawable/return2" />
        <TextView
            android:id="@+id/timetv"
	        style="@style/app_titleStyle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
	    	android:minHeight="70dp"
        	android:gravity="center" />
		<!-- 2016-6-1 hjy
        <ImageView
            android:id="@+id/setiv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="140dp"
        	android:gravity="center"
        	android:layout_centerVertical="true"
        	android:layout_toRightOf="@+id/timetv"
            android:src="@drawable/main_set" />
             -->
    </RelativeLayout>

    <GridView
	    android:id="@+id/listgv"
	    android:layout_below="@+id/header"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:dividerHeight="0dp"
	    android:numColumns="3"
	    android:layout_centerInParent="true"
	    android:paddingTop="15dp"
	    android:paddingBottom="15dp"
	    android:listSelector="#00000000"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp" />

</RelativeLayout>