<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/set_address_color3"
    android:layout_height="match_parent" >

    <View
        android:id="@+id/address_config_fragment_break"
        android:layout_width="fill_parent"
        android:layout_height="300dp"/>

    <LinearLayout
        android:id="@+id/address_config_fragment_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/address_config_fragment_break"
        android:minHeight="80dp"
        android:orientation="vertical"
         >
        <ImageView
	        android:id="@+id/address_config_fragment_iv"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerVertical="true"
	        android:layout_marginLeft="40dp" />

		<TextView
	        android:id="@+id/address_config_fragment_nametv"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        style="@style/app_titleStyle1"
	        android:gravity="center_vertical"
	        android:layout_below="@+id/iv"
	        android:layout_marginTop="25dp"
	        android:layout_marginLeft="40dp"
	        android:text="@string/config_name" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/address_config_fragment_break">

   		<Spinner
            android:id="@+id/address_config_fragment_spinner1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/address"
            android:gravity="center"
            android:background="@drawable/btn_set_config_bg"
            android:layout_weight="1" />

   		<TextView
   		    android:layout_width="wrap_content"
   		    android:layout_height="wrap_content"
   		    android:text="."
   		    android:layout_marginTop="20dp"
   		    android:gravity="bottom"
   		    style="@style/app_Style5" />

        <Spinner
            android:id="@+id/address_config_fragment_spinner2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/address2"
            android:gravity="center"
            android:background="@drawable/btn_set_config_bg"
            android:layout_weight="1" />


   		<TextView
   		    android:layout_width="wrap_content"
   		    android:layout_height="wrap_content"
   		    android:text="."
   		    android:layout_marginTop="20dp"
   		    android:gravity="bottom"
   		    style="@style/app_Style5" />

        <Spinner
            android:id="@+id/address_config_fragment_spinner3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/address3"
            android:gravity="center"
            android:background="@drawable/btn_set_config_bg"
            android:layout_weight="1" />

    </LinearLayout>

</RelativeLayout>
